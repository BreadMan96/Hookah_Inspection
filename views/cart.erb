<h2>Ваш заказ:</h2>

<div id="cart">
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Название</th>
        <th>Цена</th>
        <th>Кол-во</th>
      </tr>
    </thead>
    <tbody>
    <% total_price = 0 %>
    <% total_qty = 0 %>
    <% @items.each do |item| %>
      <tr>
        <td><%= item[0].title %></td>
        <td><%= item[0].price %>₽</td>
        <td><%= item[1] %></td>
      </tr>
      <% total_price += item[0].price * item[1].to_i %>
      <% total_qty += item[1].to_i %>
    <% end %>

      <tr>
        <td></td>
        <td bgcolor="#00FF7F">Общая сумма заказа: <b> <%= total_price %>₽ </b> </td>
        <td bgcolor="#00FF7F">Общее кол-во: <b> <%= total_qty %> </b> </td>
      </tr>

    </tbody>
  </table>

  <hr/>


  <form action="/place_order" method="POST">

    <input name="order[orders_input]" type="hidden" value="<%= @orders_input %>" />

    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Ваше имя: </label>
      <div class="col-sm-10">
        <input type="text" class="form-control width: 350px" name="order[name]" maxlength="50" placeholder="Введите имя и фамилию" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputPassword3" class="col-sm-2 col-form-label">Ваш номер телефона: </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" id="phone" name="order[phone]" placeholder="Введите Ваш номер телефон" required>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Комментарий к заказу: </label>
      <div class="col-sm-10">
        <textarea oninput="getCount()" id="seo-title" class="form-control" rows="3" name="order[descriptions]" maxlength="200" placeholder="При необходимости укажите комментарий к заказу"></textarea>
        <small class="inform-text text-muted">Кол-во оставшихся символов: <span class="badge badge-dark" id="count">200</span></small>
      </div>
    </div>

    <div class="form-group row">
      <label for="inputEmail3" class="col-sm-2 col-form-label">Адрес доставки: </label>
      <div class="col-sm-10">
        <input type="text" class="form-control" placeholder="Напишите точный адрес доставки" name="order[address]" maxlength="100" required>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-2"></div>
      <div class="col-sm-10">
        <div class="form-check">
          <input class="form-check-input" type="checkbox" id="18+" name="order[age_plus]" required>
          <label class="form-check-label" for="18+">
            Я подтверждаю, что на момент заполнения данной формы мне исполнилось 18 лет!
          </label>
        </div>
      </div>
    </div>

    <div class="form-group row">
      <div class="col-sm-10">
        <button type="submit" class="btn btn-primary btn-lg">Сделать заказ</button>
        <button class="btn btn-danger" data-toggle="modal" data-target="#exampleModal">
          Отменить
        </button>
        <!-- <button onclick="return cancel_order()" class="btn btn-danger">Отменить</button> -->
      </div>
    </div>

  </form>
</div>



<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Подтверждение действия</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        Вы уверены что хотите удалить всё содержимое корзины? Отменить это действие будет невозможно!
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Отмена</button>
        <button onclick="return cancel_order()" data-dismiss="modal" class="btn btn-primary">Удалить заказ</button>
      </div>
    </div>
  </div>
</div>


